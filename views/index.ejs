<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
			integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
			crossorigin="anonymous"
		/>
		<title>Document</title>
	</head>
	<body>
		<div class="container">
			<h2 class="text-center mt-4">Url Shortner</h2>
			<form action="/short" method="Post" class="my-4 form-inline">
				<label for="fullUrl" class="sr-only">Url</label>
				<input
					type="url"
					id="fullUrl"
					name="fullUrl"
					placeholder="url"
					required
					class="col form-control"
				/>
				<button type="submit" class="btn btn-success">Shrink</button>
			</form>
			<div class="table-responsive">
				<table class="table table-hover">
					<thead class="thead-dark">
						<tr>
							<th scope="col">Full Url</th>
							<th scope="col">Short Url</th>
							<th scope="col">Clicks</th>
							<th scope="col"></th>
							<th scope="col"></th>
						</tr>
					</thead>
					<tbody>
						<% shortUrl.forEach(ele=>{ %>
						<tr>
							<td><a href="<%= ele.fullUrl %> "><%= ele.fullUrl %></a></td>
							<td>
								<a href="<%= ele.shortUrl %>"
									><%= base %>/<%= ele.shortUrl %></a
								>
							</td>
							<td><%= ele.clicks %></td>
							<td><button class="delete btn btn-dark">Delete</button></td>
							<td><button class="copy btn btn-light">Copy</button></td>
						</tr>
						<% }) %>
					</tbody>
				</table>
			</div>
		</div>
		<script src="/main.js"></script>
	</body>
</html>
